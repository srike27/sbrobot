<?xml version="1.0"?>

<robot name="jetPR">

  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0.55" rpy=" 0 0 0"/>
      <inertia ixx="0.141" ixy="0.0" ixz="0.0" iyy="0.120" iyz="0.0" izz="0.0541"/>
    </inertial>
    <collision name='collision'>
    <origin xyz="0 0 0.3" rpy=" 0 0 0"/>
      <geometry>
        <box size=".2 .3 .5"/>
      </geometry>
    </collision> 
    <visual name='chassis_visual'>
      <origin xyz="0 0 0.3" rpy=" 0 0 0"/>
      <geometry>
        <box size=".2 .3 .5"/>
      </geometry>
    </visual>
  </link>

  <link name="head">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0.0 0.0" rpy=" 0 0 0"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>
    <collision name='collision'>
    <origin xyz="0.0 0.0 0.0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision> 
    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <link name="base_footprint">
    <pose>0 0 0 0 0 0</pose>
  </link>

  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value=".5"/>
      <inertia
        ixx="0.0004" ixy="0.0" ixz="0.0"
        iyy="0.0025" iyz="0.0"
        izz="0.0004"/>
    </inertial>
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
  </link>
  
  <link name="right_wheel">
     <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision> 
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="0.5"/>
      <inertia
        ixx="0.0004" ixy="0.0" ixz="0.0"
        iyy="0.0025" iyz="0.0"
        izz="0.0004"/>
    </inertial>
    <visual name="right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="dummy_joint">
    <origin xyz="0 0.0 0" rpy="0 0 0"/>
    <child link="base_link"/>
    <parent link="base_footprint"/>
  </joint>
  <joint type="fixed" name="head_joint">
    <origin xyz="0 0.0 0.55" rpy="0 0 0"/>
    <child link="head"/>
    <parent link="base_link"/>
  </joint>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.175 0.1" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="1.5" velocity="1000000"/>
  <physics><ode><limit>
    <cfm>0.000000</cfm>
    <erp>0.900000</erp>
  </limit></ode></physics>
  <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.175 0.1" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="1.5" velocity="1000000"/>
  <physics><ode><limit>
    <cfm>0.000000</cfm>
    <erp>0.900000</erp>
  </limit></ode></physics>
  <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <transmission name="left_motor">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_hinge">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="right_motor">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_hinge">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<gazebo>
  <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
  </plugin>
</gazebo>

  <gazebo reference="left_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Black</material>
    </gazebo>

  <gazebo reference="right_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Black</material>
    </gazebo>

  <gazebo reference="head">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>50</update_rate>
      <visualize>true</visualize>
      <topic>__default_topic__</topic>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <topicName>imu</topicName>
        <bodyName>head</bodyName>
        <updateRateHZ>50.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>head</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>
</robot>
